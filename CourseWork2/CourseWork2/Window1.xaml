<Window x:Class="CourseWork2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork2"
        mc:Ignorable="d"
        Title="Window1" Height="400" Width="450">
    <Grid>
        <TextBlock Text="Info" Height="50" Width="58" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="30" FontWeight="Bold" />
        <TextBox x:Name="infoField" Height="130" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0" FontSize="20" />
        <TextBox Text="Enter bonus percent" Height="30" Width="200" HorizontalAlignment="Center" Margin="0,70,0,0" FontSize="20" FontWeight="Bold" IsReadOnly="True" BorderBrush="White"/>
        <TextBox x:Name="percentValue" Text="" Height="40" Width="200" HorizontalAlignment="Center" Margin="0,150,0,0" FontSize="20" FontWeight="Bold" IsReadOnly="False"/>
        <Button Content="Get Bonus" Height="50" Width="200" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" Click="GetBonus_Click"/>
    </Grid>
</Window>
